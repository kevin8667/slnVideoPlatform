@model Backstage.Models.ImageForVideoList

@{
    ViewData["Title"] = "EditThumbnail";
}

<h1>Edit Thumbnail</h1>

<form asp-action="EditThumbnail" asp-route-videoId="@ViewBag.VideoId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ImageId" class="control-label"></label>
        <select asp-for="ImageId" class="form-control" id="imageSelect">
            @foreach (var item in ViewBag.ImageList)
            {
                <option value="@item.Value" data-image-path="@Url.Content(item.Text)">
                    @item.Text
                </option>
            }
        </select>
        <br />
        <img id="imagePreview" src="@Url.Content("~/img/NoImage.png")"
             title="尚無內容" />
        <span asp-validation-for="ImageId" class="text-danger"></span>
    </div>

    <input type="hidden" name="videoId" value="@ViewBag.VideoId" />

    <div class="form-group">
        <input type="submit" value="儲存" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-primary">回到列表</a>

@section Scripts
{
    <script>
        document.getElementById('imageSelect').addEventListener('blur', function () {
            var selectedOption = this.options[this.selectedIndex];
            var imagePath = selectedOption.getAttribute('data-image-path');
            var previewImage = document.getElementById('imagePreview');

            if (imagePath) {
                previewImage.src = imagePath;
            } else {
                // 若沒有選擇任何圖片，顯示預設圖片
                previewImage.src = '@Url.Content("~/img/NoImage.png")';
            }
        });
    </script>
}
