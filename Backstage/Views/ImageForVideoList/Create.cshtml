@model Backstage.Models.ImageForVideoList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ImageForVideoList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageId" class="control-label"></label>
                <select asp-for="ImageId" class="form-control" id="imageIdSelect">
                    @foreach (var item in ViewBag.ImageId)
                    {
                        <option value="@item.Value" data-image-path="@item.Text">@item.Text</option>
                    }
                </select>
                <br />
                <img id="imagePreview" src="@Url.Content("~/img/NoImage.png")"
                     class="w-50 h-50"title="尚無內容" />
                <br />
                <a asp-controller="ImageList" asp-action="Create" class="btn btn-primary me-2">上傳新圖片</a>
            </div>
            <div class="form-group">
                <label asp-for="VideoId" class="control-label"></label>
                <select asp-for="VideoId" class ="form-control" asp-items="ViewBag.VideoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="VideoList" asp-action="Index" class="btn btn-primary">回到列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById('imageIdSelect').addEventListener('change', function () {
            var selectedOption = this.options[this.selectedIndex];
            var imagePath = selectedOption.getAttribute('data-image-path');
            var previewImage = document.getElementById('imagePreview');

            if (imagePath) {
                // 假設你的圖片路徑是按照 ImageId 命名的，更新這裡的路徑格式
                previewImage.src = '@Url.Content("~/img/")' + imagePath;
            } else {
                // 若沒有選擇任何圖片，顯示預設圖片
                previewImage.src = '@Url.Content("~/img/NoImage.png")';
            }
        });
    </script>

}
