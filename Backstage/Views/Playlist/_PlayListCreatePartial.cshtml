@model Backstage.Models.PlayList

<form id="createPlaylistForm" asp-action="PlayListCreate" method="post" enctype="multipart/form-data">
    <div class="modal-header">
        <h5 class="modal-title">新增播放清單</h5>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="PlayListName" class="control-label">播放清單名稱</label>
            <input asp-for="PlayListName" class="form-control" />
            <span asp-validation-for="PlayListName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PlayListDescription" class="control-label">播放清單描述</label>
            <textarea asp-for="PlayListDescription" class="form-control"></textarea>
            <span asp-validation-for="PlayListDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShowImage" class="control-label">上傳圖片</label>
            <img id="imgPreview" src="/img/NoImageOOO.jpg" alt="圖片預覽"
                 style="width: 100%; height: auto; object-fit: cover; object-position: top;">
            <input type="file" id="ShowImage" name="ShowImage" class="form-control-file" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">新增</button>
    </div>
</form>
