@model IEnumerable<Backstage.Models.PlayListCollaborator>

@section Styles
{
    <style>
        .table {
            margin-top: 20px;
            border-collapse: separate;
            border-spacing: 0 12px;
            font-size: 1.2rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 16px;
            font-size: 1.3rem;
        }

        .table tbody td {
            background-color: #ffffff;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 16px;
            font-size: 1.2rem;
        }

        .table td .btn {
            margin-right: 8px;
            padding: 10px 20px;
            font-size: 1.1rem;
        }

        .table td:last-child .btn {
            margin-right: 0;
        }

        .table td {
            vertical-align: middle;
        }
    </style>
}

<div class="bg-light p-3 shadow-sm">
    <div id="topbar" class="d-flex justify-content-between align-items-center">

        <div id="search-bar" class="d-flex">
            <input id="search-box" type="text" placeholder="搜尋關鍵字" class="form-control me-2" style="height: 38px;" />
            <button id="btn-search-box" class="btn btn-dark w-50" style="height: 38px;">搜尋</button>
        </div>

        <div class="d-flex align-items-center">
            <select class="form-select me-2" aria-label="排序方式" style="height: 38px;" onchange="changeSort(event)">
                <option value="ascVideoAddedAt" selected>加入日期升冪</option>
                <option value="descVideoAddedAt">加入日期降冪</option>
            </select>

            <select id="page-size-select" class="form-select me-2" aria-label="每頁顯示筆數" style="height: 38px;" onchange="changePageSize(event)">
                <option value="1">每頁1筆資料</option>
                <option selected value="5">每頁5筆資料</option>
                <option value="10">每頁10筆資料</option>
                <option value="15">每頁15筆資料</option>
                <option value="20">每頁20筆資料</option>
            </select>

            <div class="d-flex align-items-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination mb-0">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>播放清單ID</th>
            <th>會員ID</th>
            <th>加入日期</th>
            <th>操作類型</th>
            <th>操作時間</th>
            <th class="text-center">動作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlayListId</td>
                <td>@item.MemberId</td>
                <td>@item.CollaboratorJoinedAt.ToString("yyyy-MM-dd")</td>
                <td>@item.CollaboratorActionType</td>
                <td>@item.ActionTimestamp.ToString("yyyy-MM-dd")</td>
                <td class="text-center">
                    <button class="btn btn-info" data-id="@item.CollaboratorId">清單</button>
                    <button class="btn btn-warning" data-id="@item.CollaboratorId">編輯</button>
                    <button class="btn btn-danger" data-id="@item.CollaboratorId">刪除</button>
                </td>
            </tr>
        }
    </tbody>
</table>