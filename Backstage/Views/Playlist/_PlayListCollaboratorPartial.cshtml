@model IEnumerable<Backstage.Models.PlayListCollaborator>

@section Styles
{
    <style>
        .table {
            margin-top: 20px;
            border-collapse: separate;
            border-spacing: 0 12px;
            font-size: 1.2rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 16px;
            font-size: 1.3rem;
        }

        .table tbody td {
            background-color: #ffffff;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 16px;
            font-size: 1.2rem;
        }

        .table td .btn {
            margin-right: 8px;
            padding: 10px 20px;
            font-size: 1.1rem;
        }

        .table td:last-child .btn {
            margin-right: 0;
        }

        .table td {
            vertical-align: middle;
        }
    </style>
}

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>播放清單ID</th>
            <th>會員ID</th>
            <th>加入日期</th>
            <th>操作類型</th>
            <th>操作時間</th>
            <th class="text-center">動作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlayListId</td>
                <td>@item.MemberId</td>
                <td>@item.CollaboratorJoinedAt.ToString("yyyy-MM-dd")</td>
                <td>@item.CollaboratorActionType</td>
                <td>@item.ActionTimestamp.ToString("yyyy-MM-dd")</td>
                <td class="text-center">
                    <button class="btn btn-info" data-id="@item.CollaboratorId">清單</button>
                    <button class="btn btn-warning" data-id="@item.CollaboratorId">編輯</button>
                    <button class="btn btn-danger" data-id="@item.CollaboratorId">刪除</button>
                </td>
            </tr>
        }
    </tbody>
</table>