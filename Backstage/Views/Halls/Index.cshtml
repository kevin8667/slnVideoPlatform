<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HallsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cinema)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HallsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cinema.CinemaName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HallsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HallsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HallsId">Delete</a>
            </td>
        </tr>
}
